<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weatherups</title>
    <link rel="stylesheet" href="style.css">
    <link rel="icon" type="image/*" href="favicon.webp">
</head>
<body>
    <header>
        <div class="container">
            <div class="brand">
                <img src="favicon.webp">
                Weatherups
            </div>
            <nav>
                <a href="/" class="active">Home</a>
                <a href="/other">Other</a>
            </nav>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="weather">
                <div class="info">
                    <img src="<%- flag %>">
                    <div class="location">
                        <div class="name"><%- location %></div>
                        <div class="geo"><%- `${lat}, ${long}` %></div>
                    </div>
                </div>
                <div class="forecasts">
                    <% for(var i = 0; i < forecast.length; i++) { %>
                        <div class="forcast" title="<%- forecast[i].weather %>">
                            <img src="<%- forecast[i].img %>">
                            <h3><%- forecast[i].day %></h3>
                            <span><%- forecast[i].date %></span>
                            <span><%- forecast[i].temp %></span>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
</body>
</html>